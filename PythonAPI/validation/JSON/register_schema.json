{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Root",
  "type": "object",
  "required": [
    "username",
    "firstName",
    "lastName",
    "email",
    "password",
    "dateOfJoin",
    "role"
  ],
  "properties": {
    "username": {
      "title": "Username",
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]{4,16}$",
      "minLength": 2,
      "maxLength": 30
    },
    "firstName": {
      "title": "Firstname",
      "type": "string",
      "pattern": "^[A-Za-z]+$",
      "minLength": 2,
      "maxLength": 30
    },
    "lastName": {
      "title": "Lastname",
      "type": "string",
      "pattern": "^[A-Za-z]+$",
      "minLength": 2,
      "maxLength": 30
    },
    "email": {
      "title": "Email",
      "type": "string",
      "pattern": "^.*$"
    },
    "password": {
      "title": "Password",
      "type": "string",
      "pattern": "^.*$",
      "minLength": 7
    },
    "dateOfJoin": {
      "title": "Dateofjoin",
      "type": "string",
      "pattern": "^.*$"
    },
    "role": {
      "title": "Role",
      "type": "string",
      "pattern": "^[A-Za-z]+$"
    }
  }
}
